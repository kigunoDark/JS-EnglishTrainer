{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
          "*": ["src/*"]
        },
        
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "lib": ["dom", "esnext"],
        "skipLibCheck": true,
    }
}
